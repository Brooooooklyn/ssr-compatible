{
  "name": "ssr-compatible",
  "version": "0.0.0",
  "description": "Wrap SSR adapter for non-compatible libraries ",
  "main": "lib/index.js",
  "repository": "https://github.com/Brooooooklyn/ssr-compatible",
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s clean build:esm build:bundle clean:js",
    "build:bundle": "rollup --config rollup.config.js",
    "build:esm": "tsc -b tsconfig.project.json -verbose",
    "clean": "shx rm -rf ./packages/**/*.tsbuildinfo && shx rm -rf ./packages/**/{esm,dist}",
    "clean:js": "shx rm -rf './packages/**/esm/**/*.{js,map}'",
    "demo": "TS_NODE_PROJECT=./tsconfig.cjs.json webpack-dev-server --config ./webpack.config.ts",
    "lint": "eslint . -c ./.eslintrc.yml 'packages/**/*.{ts,tsx}'"
  },
  "private": true,
  "devDependencies": {
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.7",
    "@types/sinon": "^9.0.8",
    "@types/wavesurfer.js": "^3.3.1",
    "@types/webpack": "^4.41.25",
    "@types/webpack-dev-server": "^3.11.1",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.6.1",
    "ava": "^3.13.0",
    "codecov": "^3.8.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-sonarjs": "^0.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "lodash": "^4.17.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rollup": "^2.33.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "shx": "^0.3.3",
    "sinon": "^9.2.1",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5",
    "wavesurfer.js": "^4.2.0",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "prettier --write",
      "eslint -c .eslintrc.yml --fix"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
